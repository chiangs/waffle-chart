{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["es6", "esnext", "es2016", "dom", "dom.iterable", "scripthost"],
        "allowJs": true,
        "declaration": true,
        "sourceMap": false,
        "outDir": "dist",
        "rootDir": "",
        "importHelpers": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["vitest/globals"],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": ["node_modules", "dist", "test", "/public"]
}
